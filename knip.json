{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "svelte": true,
  "workspaces": {
    ".": {
      "entry": [],
      "project": []
    },
    "packages/frontend": {
      "entry": ["src/routes/**/*.svelte", "src/app.html", "svelte.config.js", "vite.config.ts"],
      "project": ["src/**/*.{ts,svelte}"],
      "ignore": ["src/lib/components/ui/**", ".svelte-kit/**"]
    },
    "packages/core": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/domain": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": ["**/generated/**", "**/node_modules/**"],
  "ignoreDependencies": ["sort-package-json"],
  "ignoreBinaries": ["check_image"],
  "ignoreExportsUsedInFile": true
}
