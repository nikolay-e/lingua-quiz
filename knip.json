{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "svelte": true,
  "workspaces": {
    ".": {
      "entry": [],
      "project": []
    },
    "packages/frontend": {
      "entry": ["src/routes/**/*.svelte", "src/app.html", "svelte.config.js", "vite.config.ts", "src/lib/pwa/index.ts"],
      "project": ["src/**/*.{ts,svelte}"],
      "ignore": [".svelte-kit/**"],
      "paths": {
        "$lib": ["./src/lib"],
        "$lib/*": ["./src/lib/*"],
        "$stores": ["./src/stores"],
        "$stores/*": ["./src/stores/*"],
        "$components": ["./src/components"],
        "$components/*": ["./src/components/*"],
        "$api": ["./src/lib/api"],
        "$api/*": ["./src/lib/api/*"],
        "$src": ["./src"],
        "$src/*": ["./src/*"]
      }
    },
    "packages/core": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/domain": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": ["**/generated/**", "**/node_modules/**"],
  "ignoreDependencies": ["sort-package-json"],
  "ignoreBinaries": ["check_image"],
  "ignoreExportsUsedInFile": true
}
