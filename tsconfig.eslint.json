{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.js",
    "packages/**/*.svelte",
    "eslint.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}