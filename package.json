{
  "name": "lingua-quiz",
  "version": "1.0.5",
  "description": "Lingua Quiz - A language learning quiz application",
  "keywords": [
    "language-learning",
    "quiz",
    "vocabulary",
    "monorepo"
  ],
  "author": "Nikolay Eremeev",
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "check": "npm run check --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate:api": "make openapi && npm run generate:api --workspace @lingua-quiz/frontend",
    "generate:domain": "make domain-schema && npm run generate --workspace @lingua-quiz/domain && npm run build --workspace @lingua-quiz/domain",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "dependencies": {
    "@eslint/js": "^9.39.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint-plugin-svelte": "^3.13.0",
    "svelte-eslint-parser": "^1.3.3"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "postcss-html": "^1.8.0",
    "prettier": "^3.7.3",
    "sort-package-json": "^3.5.0",
    "stylelint": "^16.26.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3"
  }
}
