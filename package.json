{
  "name": "linguaquiz",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "lint": "npm run lint:format && npm run lint:js",
    "lint:format": "prettier --check .",
    "lint:js": "eslint . --max-warnings=600",
    "fix": "npm run fix:format && npm run fix:js",
    "fix:format": "prettier --write .",
    "fix:js": "eslint . --fix --max-warnings=600",
    "depcheck": "depcheck --ignores=prettier-plugin-sql,prettier-plugin-sh,@types/jest,axios,nodemon,supertest,testcontainers,eslint-import-resolver-node,@eslint/js,eslint-plugin-promise,eslint-plugin-sonarjs,eslint-plugin-security,eslint-plugin-jsonc,jsonc-eslint-parser,eslint-plugin-jest,eslint-plugin-node,eslint-plugin-unicorn,@babel/core,@babel/preset-env,babel-jest,globals",
    "format": "prettier --write .",
    "prepare": "husky",
    "dev:ui": "npm -w @linguaquiz/frontend run start",
    "dev:api": "npm -w @linguaquiz/backend run start",
    "build:ui": "npm -w @linguaquiz/frontend run build",
    "db:migrate": "npm -w @linguaquiz/backend run migrate",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npm run test:unit:frontend && npm run test:unit:backend",
    "test:unit:frontend": "npm -w @linguaquiz/frontend run test:unit",
    "test:unit:backend": "npm -w @linguaquiz/backend run test:unit",
    "test:integration": "npm run test:integration:frontend && npm run test:integration:backend",
    "test:integration:frontend": "npm -w @linguaquiz/frontend run test:integration",
    "test:integration:backend": "npm -w @linguaquiz/backend run test",
    "test:frontend": "npm -w @linguaquiz/frontend run test",
    "test:frontend:e2e-jest": "npm -w @linguaquiz/frontend run test:e2e-jest",
    "test:e2e": "npm -w @linguaquiz/e2e-tests run test",
    "test:e2e:auth": "npm -w @linguaquiz/e2e-tests run test:auth",
    "test:e2e:quiz": "npm -w @linguaquiz/e2e-tests run test:quiz",
    "test:e2e:fast": "npm -w @linguaquiz/e2e-tests run test:quiz:fast",
    "test:e2e:debug": "npm -w @linguaquiz/e2e-tests run test:quiz:debug",
    "test:e2e:chromium": "npm -w @linguaquiz/e2e-tests run test:chromium",
    "docker:up": "docker compose up --build -d db backend frontend",
    "docker:down": "docker compose down",
    "test:e2e:docker": "npm run docker:up && npm run test:e2e",
    "test:report": "npm -w @linguaquiz/e2e-tests run report"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "prettier --write",
      "eslint --fix --max-warnings=600"
    ],
    "*.{json,yaml,yml,md,html,css,sql,sh}": [
      "prettier --write"
    ],
    "**/Dockerfile*": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.25.0",
    "@eslint/js": "^9.25.0",
    "@types/jest": "^29.5.12",
    "axios": "^1.7.7",
    "babel-jest": "^29.7.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsonc": "^2.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^55.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.2.8",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.7",
    "prettier": "^3.5.2",
    "prettier-plugin-sh": "^0.14.0",
    "prettier-plugin-sql": "^0.18.1",
    "supertest": "^7.0.0"
  },
  "description": ""
}
