{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-sql", "prettier-plugin-sh"],
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "printWidth": 80
      }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "singleQuote": false,
        "proseWrap": "always"
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "proseWrap": "always"
      }
    },
    {
      "files": "*.sql",
      "options": {
        "language": "postgresql"
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "printWidth": 120
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["*.js", "*.cjs"],
      "options": {
        "parser": "babel"
      }
    },
    {
      "files": ["*.py"],
      "options": {
        "singleQuote": false,
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.csv"],
      "options": {}
    }
  ]
}
