{
  "name": "@lingua-quiz/frontend",
  "version": "1.0.0",
  "description": "Frontend application for Lingua Quiz",
  "type": "module",
  "scripts": {
    "predev": "npm run build --workspace=@lingua-quiz/core",
    "dev": "vite",
    "build": "npm run build --workspace=@lingua-quiz/core && vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@lingua-quiz/core": "file:../core",
    "jwt-decode": "^4.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.5",
    "svelte": "^5.39.6",
    "svelte-check": "^4.3.2",
    "vite": "^7.1.7",
    "vite-plugin-pwa": "^1.0.3"
  },
  "keywords": [
    "svelte",
    "frontend",
    "language-learning",
    "quiz"
  ]
}
