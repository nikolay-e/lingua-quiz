{
  "name": "@lingua-quiz/frontend",
  "version": "1.0.5",
  "description": "Frontend application for Lingua Quiz",
  "keywords": [
    "svelte",
    "frontend",
    "language-learning",
    "quiz"
  ],
  "type": "module",
  "scripts": {
    "build": "npm run build --workspace=@lingua-quiz/core && vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "predev": "npm run build --workspace=@lingua-quiz/core",
    "dev": "vite dev",
    "format": "prettier --write .",
    "generate:api": "node ./scripts/generate-api.js",
    "lint": "prettier --check . && eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@lingua-quiz/core": "file:../core",
    "@lingua-quiz/domain": "file:../domain",
    "focus-trap": "^7.6.6",
    "jwt-decode": "^4.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.18",
    "@vite-pwa/sveltekit": "^1.1.0",
    "bits-ui": "^2.14.4",
    "clsx": "^2.1.1",
    "lucide-svelte": "^0.561.0",
    "openapi-typescript-codegen": "^0.29.0",
    "svelte": "^5.45.10",
    "svelte-check": "^4.3.4",
    "svelte-sonner": "^1.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "vite": "^7.2.7"
  }
}
