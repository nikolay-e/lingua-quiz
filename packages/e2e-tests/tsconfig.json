{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@playwright/test", "node"],
    "paths": {
      "@lingua-quiz/core": ["../core/src"],
      "@lingua-quiz/core/*": ["../core/src/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.js",
    "playwright.config.ts",
    "playwright.config.js"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*.spec.js.deprecated"
  ]
}
