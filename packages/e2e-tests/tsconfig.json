{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2020",
    "types": ["@playwright/test", "node"]
  },
  "exclude": ["node_modules", "tests/**/*.spec.js.deprecated"],
  "include": ["tests/**/*.ts", "tests/**/*.js", "playwright.config.ts", "playwright.config.js"]
}
