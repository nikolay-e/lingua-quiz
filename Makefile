# ===================================================================================
# Lingua Quiz :: Makefile
# ===================================================================================
.DEFAULT_GOAL := help
.PHONY: help

# ===================================================================================
# HELP
# ===================================================================================
help: ## Show this help message
	@echo "Lingua Quiz - Development Makefile"
	@echo "-----------------------------------"
	@echo ""
	@echo "Available commands:"
	@awk 'BEGIN {FS = ":.*?## "} /^[a-zA-Z0-9._-]+:.*?## / {printf "  \033[36m%-25s\033[0m %s\n", $$1, $$2}' $(MAKEFILE_LIST)
